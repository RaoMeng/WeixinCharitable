.content {
     width: 100%;
     height: max-content;
     flex: 1;
     white-space: nowrap;
}

.content .projectBody {
     width: 100%;
     overflow: scroll;
     font-family: PingFangSC-Regular;
     font-size: 14px;
     color: #000;
     padding-bottom: 130rpx;
}

.payItem {
     width: 100%;
     height: 120rpx;
     display: flex;
     flex-direction: row;
     align-items: center;
     justify-content: center;
     background: white;
     font-size: 32rpx;
     z-index: 100;
     position: fixed;
     bottom: 0;
     left: 0;
     right: 0;
}

.payItem .button {
     width: 60%;
     padding: 20rpx;
     text-align: center;
     font-size: 14px;
     color: white;
     border-radius: 20px;
}
.payItem .NObutton{
     width: 60%;
     padding: 20rpx;
     text-align: center;
     font-size: 14px;
     color: white;
     border-radius: 20px;
     
}
.payItem .NObutton
{
   background-color: lightgray; 
}
.payItem .NObuttonHover{
   background-color: lightgray; 
}
.payItem .button {
     background-color: #ef613b;
}

.payItem .buttonHover {
     background-color: #f84412;
}

.projectBody .headerImg {
     width: 100%;
     height: 400rpx;
}

.projectBody .titleItem {
     display: flex;
     flex-direction: row;
     align-items: center;
     padding: 20rpx 30rpx;
}

.projectBody .titleItem .name {
     flex: 1;
     font-family: PingFangSC-Regular;
     font-size: 14px;
     color: #060606;
     letter-spacing: 0;
     text-align: left;
}

.projectBody .titleItem .state {
     font-family: PingFangSC-Regular;
     font-size: 12px;
     color: #2e8208;
     letter-spacing: 0;
     text-align: left;
}

.projectBody .introduce {
     font-family: PingFangSC-Regular;
     font-size: 12px;
     color: #747474;
     padding: 0 30rpx 20rpx;
     display: inline-block;
     white-space: pre-line;
}

.projectBody .donationProgress {
     background-color: #fff3f0;
     margin-top: 10rpx;
     display: flex;
     flex-direction: row;
     margin: 0 30rpx;
     padding: 36rpx 0;
}

.projectBody .donationProgress .progressItem {
     display: flex;
     flex: 1;
     flex-direction: column;
     align-items: center;
     justify-content: center;
}

.progressItem .money {
     font-family: PingFangSC-Regular;
     font-size: 14px;
     color: #ef613b;
}

.progressItem .text {
     font-family: PingFangSC-Regular;
     font-size: 12px;
     margin-top: 20rpx;
     color: #767676;
}

.donationDate {
     display: flex;
     flex-direction: row;
     padding: 20rpx 30rpx;
}

.donationDate .caption {
     font-family: PingFangSC-Regular;
     font-size: 12px;
     color: #767676;
     margin-left: 10rpx;
}

.donationDate .value {
     font-family: PingFangSC-Regular;
     font-size: 12px;
     color: #767676;
     margin-left: 50rpx;
}

.classifyTitle {
     font-size: 14px;
     color: #000;
     display: flex;
     flex-direction: row;
     align-items: center;
     padding: 12rpx 30rpx;
}

.classifyTitle .sign {
     display: inline-block;
     width: 3px;
     height: 12px;
     margin-right: 10rpx;
     background-color: #f0623d;
}

.projectBody .projectInfo {
     padding: 20rpx 40rpx;
     font-size: 12px;
     color: #555;
     line-height: 1.6em;
     white-space: pre-line;
}

.organizationBody {
     display: flex;
     flex-direction: column;
     padding: 20rpx 40rpx;
}

.organizationBody .iconName {
     display: flex;
     flex-direction: row;
     padding: 20rpx 0;
     align-items: center;
}

.iconName .icon {
     width: 60rpx;
     height: 60rpx;
     border-radius: 50%;
}

.iconName .name {
     font-size: 14px;
     color: #1f1f1f;
     margin-left: 20rpx;
}

.projectBody .rowItem {
     display: flex;
     flex-direction: row;
     padding: 12rpx 0;
}

.rowItem .caption {
     font-size: 12px;
     color: #1f1f1f;
}

.rowItem .value {
     flex: 1;
     font-size: 12px;
     color: #585353;
     text-align: right;
}
